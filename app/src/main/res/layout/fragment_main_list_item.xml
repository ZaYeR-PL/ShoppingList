<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/main_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cards_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cards_padding"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        style="@style/CardView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        tools:text="Shopping List name"/>

    <TextView
        android:id="@+id/content_tv"
        style="@style/CardView.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        tools:text="milk, bread, eggs, cheese, water, carrot x3, milk, bread, eggs, cheese, water, carrot x3, milk, bread, eggs, cheese, water, carrot x3"/>

    </LinearLayout>

</android.support.v7.widget.CardView>